<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
     https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="1745066986615" author="vijayan">
        <createTable tableName="building">
            <column name="building_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="building_name" type="VARCHAR(255)"/>
            <column name="bin_no" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="block_number" type="BIGINT"/>
            <column name="lot_number" type="BIGINT"/>
            <column name="no_of_stories" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="height_in_feet" type="BIGINT"/>
            <column name="certificate_availability" type="VARCHAR(255)"/>
            <column name="certificate_number" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="occupancy_classification" type="VARCHAR(255)"/>
            <column name="construction_classification" type="VARCHAR(255)"/>
            <column name="notes" type="VARCHAR(1024)"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="address_line" type="VARCHAR(255)"/>
            <column name="alter_address_line" type="VARCHAR(255)"/>
            <column name="city" type="VARCHAR(255)"/>
            <column name="state" type="VARCHAR(255)"/>
            <column name="zipcode" type="VARCHAR(50)"/>
            <column name="facility_id" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="building"
                baseColumnNames="facility_id"
                constraintName="fk_building_facility"
                referencedTableName="facility"
                referencedColumnNames="facility_id"
                onDelete="SET NULL"/>
    </changeSet>

</databaseChangeLog>
