<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1725589341091" author="vijayan">
        <createTable tableName="inspection_type">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="VARCHAR(200)"/>
        </createTable>

        <createTable tableName="device_type">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="type" type="VARCHAR(200)"/>
        </createTable>

        <!--Load Data-->

        <loadData tableName="inspection_type"
                  file="db/changelog/data/inspection_type.csv"
                  separator=";"
                  usePreparedStatements="false">
            <column name="id" type="bigint"/>
            <column name="type" type="varchar(200)"/>
        </loadData>

        <loadData tableName="device_type"
                  file="db/changelog/data/device_type.csv"
                  separator=";"
                  usePreparedStatements="false">
            <column name="id" type="bigint"/>
            <column name="type" type="varchar(200)"/>
        </loadData>

        <dropColumn tableName="elevator" columnName="device_type"/>
        <addColumn tableName="elevator">
            <column name="device_type_id" type="bigint"/>
        </addColumn>

        <addForeignKeyConstraint baseTableName="elevator"
                                 baseColumnNames="device_type_id"
                                 constraintName="fk_elevator_device_type"
                                 referencedTableName="device_type"
                                 referencedColumnNames="id"/>

        <dropForeignKeyConstraint baseTableName="boiler_cogen_agency_info" constraintName="fk_boiler_cogen_agency_info_management_type"/>
        <dropColumn tableName="boiler_cogen_agency_info" columnName="inspection_type"/>
        <addColumn tableName="boiler_cogen_agency_info">
            <column name="inspection_type_id" type="bigint"/>
        </addColumn>

        <addForeignKeyConstraint baseTableName="boiler_cogen_agency_info"
                                 baseColumnNames="inspection_type_id"
                                 constraintName="fk_boiler_cogen_agency_info_inspection_type"
                                 referencedTableName="inspection_type"
                                 referencedColumnNames="id"/>

    </changeSet>
</databaseChangeLog>
