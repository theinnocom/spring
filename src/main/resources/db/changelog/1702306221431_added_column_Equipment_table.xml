                <constraints unique="true"/>
            </column>
        </addColumn>

        <addColumn tableName="absorber_chiller">
            <column name="unique_id" type="varchar(200)">
                <constraints unique="true" />
            </column>
        </addColumn>

        <addColumn tableName="air_conditioning_unit">
            <column name="unique_id" type="varchar(200)">
