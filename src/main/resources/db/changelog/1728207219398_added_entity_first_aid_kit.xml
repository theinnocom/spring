<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1728207219398" author="vijayan">
        <createTable tableName="first_aid_kit">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="active_status" type="BOOLEAN" defaultValue="true"/>
            <column name="unique_id" type="VARCHAR(255)">
                <constraints unique="true" nullable="false" />
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="floor" type="VARCHAR(255)" />
            <column name="location" type="VARCHAR(255)" />
            <column name="landmark" type="VARCHAR(255)" />
            <column name="installed_on" type="BIGINT" />
            <column name="installed_by" type="VARCHAR(255)" />
            <column name="management_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="managed_by" type="VARCHAR(255)" />
            <column name="management_note" type="VARCHAR(255)" />
            <column name="disconnected_on" type="BIGINT" />
            <column name="make" type="VARCHAR(255)" />
            <column name="model" type="VARCHAR(255)" />
            <column name="serial_number" type="VARCHAR(255)" />
            <column name="kit_used_on" type="BIGINT" />
            <column name="used_for_incident" type="VARCHAR(255)" />
            <column name="aid_kit_restored_after_use" type="BOOLEAN">
                <constraints nullable="false" />
            </column>
            <column name="kit_restored_date" type="BIGINT" />
            <column name="kit_expiry_date" type="BIGINT" />
            <column name="kit_restored_by" type="VARCHAR(255)" />
            <column name="employee_trained" type="BOOLEAN">
                <constraints nullable="false" />
            </column>
            <column name="employee_name" type="VARCHAR(255)" />
            <column name="trained_person_names" type="VARCHAR(255)" />
            <column name="monthly_inspection_date" type="BIGINT" />
            <column name="inspected_by" type="VARCHAR(255)" />
            <column name="annual_inspection_date" type="BIGINT" />
            <column name="note" type="VARCHAR(255)" />
            <column name="building_id" type="BIGINT" />
            <column name="job_filing_information_id" type="BIGINT" />
        </createTable>

        <addForeignKeyConstraint baseTableName="first_aid_kit"
                                 baseColumnNames="management_id"
                                 referencedTableName="management_type"
                                 constraintName="first_aid_kit_management_type"
                                 referencedColumnNames="id" />

        <addForeignKeyConstraint baseTableName="first_aid_kit"
                                 baseColumnNames="building_id"
                                 referencedTableName="building"
                                 constraintName="first_aid_kit_building"
                                 referencedColumnNames="building_id" />

        <addForeignKeyConstraint baseTableName="first_aid_kit"
                                 baseColumnNames="job_filing_information_id"
                                 referencedTableName="job_filing_information"
                                 constraintName="first_aid_kit_job_filing_information"
                                 referencedColumnNames="job_filing_id" />
    </changeSet>
</databaseChangeLog>
