<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1714217939881" author="vijayan">
        <dropColumn tableName="generator" columnName="secondary_fuel"/>
        <dropColumn tableName="generator" columnName="primary_fuel"/>
        <renameColumn tableName="generator" oldColumnName="make_by" newColumnName="make" columnDataType="varchar(255)"/>
        <addColumn tableName="generator">
            <column name="status" type="varchar(255)"/>
            <column name="primary_fuel_id" type="bigint"/>
            <column name="secondary_fuel_id" type="bigint"/>
        </addColumn>

        <addForeignKeyConstraint baseTableName="generator"
                                 baseColumnNames="primary_fuel_id"
                                 constraintName="fk_generator_primary_fuel_id"
                                 referencedTableName="fuel_type"
                                 referencedColumnNames="fuel_type_id"/>

        <addForeignKeyConstraint baseTableName="generator"
                                 baseColumnNames="secondary_fuel_id"
                                 constraintName="fk_generator_secondary_fuel_id"
                                 referencedTableName="fuel_type"
                                 referencedColumnNames="fuel_type_id"/>

        <addColumn tableName="land_fill">
            <column name="status" type="varchar(255)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
