<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1713084390694" author="vijayan">
        <createTable tableName="stack_agency_info">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="method_9_test_conducted" type="VARCHAR(255)">
            </column>
            <column name="last_test_date" type="BIGINT">
            </column>
            <column name="next_test_date" type="BIGINT"/>
            <column name="stack_id" type="BIGINT"/>
            <column name="stack_agency_id" type="BIGINT"/>
            <column name="opacity_permissible_limit" type="VARCHAR(255)">
            </column>
            <column name="tested_by" type="VARCHAR(255)">
            </column>
            <column name="note" type="VARCHAR(255)"/>

        </createTable>

        <createTable tableName="stack_agency">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="type" type="varchar(255)"/>
        </createTable>

        <loadData tableName="stack_agency"
                  file="db/changelog/data/stack_agency.csv"
                  separator=";"
                  usePreparedStatements="false">
            <column name="id" type="bigint"/>
            <column name="type" type="varchar(255)"/>
        </loadData>

        <addForeignKeyConstraint baseTableName="stack_agency_info"
                                 baseColumnNames="stack_id"
                                 constraintName="fk_stack_agency_info_stack_id"
                                 referencedTableName="stack"
                                 referencedColumnNames="stack_id"/>

        <addForeignKeyConstraint baseTableName="stack_agency_info"
                                 baseColumnNames="stack_agency_id"
                                 constraintName="fk_stack_agency_info_stack_agency_id"
                                 referencedTableName="stack_agency"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
