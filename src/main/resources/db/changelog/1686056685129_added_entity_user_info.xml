<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="02" author="Vijayan">
        <createTable tableName="user_info">
            <column name="user_info_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(200)"/>
            <column name="last_name" type="varchar(200)"/>
            <column name="city_name" type="varchar(255)"/>
            <column name="country_code" type="varchar(100)"/>
            <column name="country_name" type="varchar(255)"/>
            <column name="zipcode" type="varchar(100)"/>
            <column name="address" type="varchar(100)"/>
            <column name="mobile_number" type="varchar(15)"/>
            <column name="alternate_mobile_number" type="varchar(15)"/>
            <column name="created_at" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint"/>
            <column name="updated_at" type="bigint"/>
        </createTable>
    </changeSet>
</databaseChangeLog>