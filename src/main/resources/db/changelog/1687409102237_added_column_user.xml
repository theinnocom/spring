<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="16" author="Vijayan">
        <addColumn tableName="user">
            <column name="user_type" type="varchar(100)"/>
            <column name="update_permission" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="alternate_mail" type="varchar(200)"/>
            <column name="must_change_password" type="boolean" defaultValue="true"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>