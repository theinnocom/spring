<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1701958952380" author="Vijayan">
        <createTable tableName="portable_fire_extinguisher">
            <column name="fire_extinguisher_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="floor" type="varchar(100)"/>
            <column name="location" type="varchar(200)"/>
            <column name="make_by" type="varchar(255)"/>
            <column name="serial_no" type="varchar(200)"/>
            <column name="installed_by" type="varchar(200)"/>
            <column name="installed_on" type="bigint"/>
            <column name="managed_by" type="varchar(100)"/>
            <column name="is_active" type="boolean" defaultValue="true"/>
            <column name="building_id" type="bigint"/>
            <column name="management" type="varchar(200)"/>
            <column name="model" type="varchar(200)"/>
            <column name="capacity" type="varchar(200)"/>
            <column name="class_type" type="varchar(200)"/>
            <column name="hydrostatic_pressure_test" type="varchar(200)"/>
            <column name="inspection_tag_attached" type="varchar(200)"/>
            <column name="inspection_hydrostatic_pressure_test" type="varchar(200)"/>
            <column name="inspection_last_test_date" type="bigint"/>
            <column name="inspection_next_test_date" type="bigint"/>

            <column name="job_filing_information_id" type="bigint"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="portable_fire_extinguisher"
                                 baseColumnNames="building_id"
                                 constraintName="fk_portable_fire_extinguisher_building_id"
                                 referencedTableName="building"
                                 referencedColumnNames="building_id"/>

        <addForeignKeyConstraint baseTableName="portable_fire_extinguisher"
                                 baseColumnNames="job_filing_information_id"
                                 constraintName="fk_portable_fire_extinguisher_job_filing_information_id"
                                 referencedTableName="job_filing_information"
                                 referencedColumnNames="job_filing_id"/>
    </changeSet>
</databaseChangeLog>